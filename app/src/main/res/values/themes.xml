<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SmartWaterGuard" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor">@color/deep_navy</item>
        <item name="android:navigationBarColor">@color/deep_navy</item>
        <item name="android:windowBackground">@color/aqua_background</item>

        <!-- Gunakan typography modern -->
        <item name="fontFamily">@font/poppins</item>
    </style>

    <!-- Base application theme -->
    <style name="Base.Theme.SmartWaterGuard" parent="Theme.Material3.DayNight.NoActionBar" />

    <!-- Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/aqua_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.SmartWaterGuard</item>
    </style>

</resources>
