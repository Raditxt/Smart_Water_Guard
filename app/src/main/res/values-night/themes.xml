<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SmartWaterGuard" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/highlight_cyan</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@color/primary_dark_blue</item>
        <item name="android:navigationBarColor">@color/primary_dark_blue</item>
        <item name="android:windowBackground">@color/dark_background</item>

        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="Base.Theme.SmartWaterGuard" parent="Theme.Material3.Dark.NoActionBar" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_dark_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.SmartWaterGuard</item>
    </style>

</resources>
