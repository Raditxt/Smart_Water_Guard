<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aqua_background"
    android:fillViewport="true"
    tools:context=".MonitoringFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_monitoring_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monitoring Kualitas Air Bersih"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/deep_navy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_last_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terakhir diperbarui: 15:00 WITA"
            android:textSize="14sp"
            android:textColor="@color/deep_navy"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_monitoring_title" />

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/sensor_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:columnCount="2"
            app:rowCount="2"
            app:alignmentMode="alignBounds"
            app:columnOrderPreserved="false"
            app:layout_constraintTop_toBottomOf="@id/tv_last_update">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_ph"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <include layout="@layout/card_sensor_item" android:id="@+id/include_ph" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_tds"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">
                <include layout="@layout/card_sensor_item" android:id="@+id/include_tds" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_turbidity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">
                <include layout="@layout/card_sensor_item" android:id="@+id/include_turbidity" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_temp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">
                <include layout="@layout/card_sensor_item" android:id="@+id/include_temp" />
            </androidx.cardview.widget.CardView>

        </androidx.gridlayout.widget.GridLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/line_chart_history"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/bg_card_rounded"
            android:padding="8dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/sensor_grid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>