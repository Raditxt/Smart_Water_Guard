<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aqua_background"
    android:padding="16dp"
    tools:context=".RecommendationFragment">

    <TextView
        android:id="@+id/tv_recommendation_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rekomendasi Tindakan"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/deep_navy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_recommendation_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tindakan yang direkomendasikan berdasarkan hasil analisis kualitas air terakhir."
        android:textSize="14sp"
        android:textColor="@color/deep_navy"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_recommendation_header" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_recommendations"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/tv_recommendation_subtitle"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_recommendation" />

</androidx.constraintlayout.widget.ConstraintLayout>